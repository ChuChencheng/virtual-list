{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "comma-dangle": ["warn", "always-multiline"],
    "quotes": ["warn", "single"],
    "indent": ["warn", 2],
    "linebreak-style": ["error", "unix"],
    "semi": ["warn", "never"],
    "@typescript-eslint/indent": ["warn", 2]
  }
}
